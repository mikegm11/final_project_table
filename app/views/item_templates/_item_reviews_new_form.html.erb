<form action="/create_review_from_item" method="post">

  <input type="hidden" name="item_id" value="<%= @item.id %>">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <input type="text" id="review" name="review" class="form-control" value="<%= @review.review %>">
  </div>

  <div class="form-group">
    <label for="orderagain">
      Orderagain
    </label>
    <input id="orderagain" class="form-check-input" name="orderagain" type="checkbox" <%= "checked" if @review.orderagain %>>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>
